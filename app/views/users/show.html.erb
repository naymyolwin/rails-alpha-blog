<h1 class="text-center text-3xl mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<td><%= "Admin" if current_user.admin? %></td>
<% if logged_in? && @user == current_user %>
    <div class="text-center mt-4">
        <%= link_to "Edit", edit_user_path(@user) %>
        <%= link_to "Delete", user_path(current_user), data: { "turbo-method": :delete, "turbo_confirm": "Are you sure?" } %>
    </div>
<% end %>

<h3 class="text-center text-3xl mt-4">Articles</h3>

<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

